<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".MeetingType">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_meeting_types"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="app logo"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@color/txt_color"
        android:text="Which type of Meeting you want?"
        android:textFontWeight="900"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogo"
        android:fontFamily="@font/sfregular"

        />

    <android.widget.Button
        android:id="@+id/btn_edu_meeting"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_meetings"
        android:fontFamily="@font/sfregular"
        android:text="Educational Meeting"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/input_txt_color"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:drawableEnd="@drawable/ic_arrow_right"
        />

    <android.widget.Button
        android:id="@+id/btn_bus_meeting"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfregular"
        android:background="@drawable/btn_meetings"
        android:text="Business Meeting"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/input_txt_color"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edu_meeting"
        android:drawableEnd="@drawable/ic_arrow_right"
        />

</androidx.constraintlayout.widget.ConstraintLayout>