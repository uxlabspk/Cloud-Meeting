<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResults">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_toolbar"
        android:elevation="5dp" >

    <ImageView
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back"
        android:backgroundTint="@color/toolbar_icon_colors" />

        <TextView
            android:id="@+id/quizz_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfbold"
            android:text="Quizzes/Assignments Results"
            android:textColor="@color/txt_color"
            android:textSize="21sp"
            android:layout_gravity="center" />


    </androidx.appcompat.widget.Toolbar>




    <androidx.cardview.widget.CardView
        android:id="@+id/prototype_quiz1_result_box"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 1"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:textSize="21sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00 am"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="250dp"
            android:layout_marginTop="30dp"
            android:textSize="12sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/prototype_quiz2_result_box"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 2"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:textSize="21sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00 am"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="250dp"
            android:layout_marginTop="30dp"
            android:textSize="12sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/prototype_assignment1_result_box"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment 1"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:textSize="21sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00 pm"
            android:fontFamily="@font/sfregular"
            android:textColor="@color/txt_color"
            android:layout_marginStart="250dp"
            android:layout_marginTop="30dp"
            android:textSize="12sp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>