<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_toolbar"
        android:elevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="21sp"
            android:fontFamily="@font/sfbold"
            android:textColor="@color/txt_color"
            />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/user_profile_pic"
               android:layout_width="123dp"
               android:layout_height="116dp"
               android:contentDescription="@string/user_profile_str"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="90dp"
               android:background="@drawable/ic_profile"
               android:backgroundTint="@color/txt_color"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/user_profile_pic"
               android:layout_marginTop="14dp"
               android:orientation="vertical" >

               <TextView
                   android:id="@+id/userName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Muhammad Naveed"
                   android:textColor="@color/txt_color"
                   android:fontFamily="@font/sfbold"
                   android:layout_gravity="center"
                   android:textSize="18sp"
                   />

               <TextView
                   android:id="@+id/userEmail"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="muhammadnaveedcis@gmail.com"
                   android:textColor="@color/txt_color"
                   android:fontFamily="@font/sfregular"
                   android:layout_gravity="center"
                   android:textSize="16sp"
                   android:layout_marginTop="5dp"
                   />

               <android.widget.Button
                   android:id="@+id/edu_edit_profile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Edit Profile"
                   android:textColor="@color/input_txt_color"
                   android:textAllCaps="false"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:background="@drawable/btn_meetings"
                   android:fontFamily="@font/sfregular"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:textAlignment="textStart"
                   android:layout_marginTop="40dp"
                   android:drawableEnd="@drawable/ic_edit"
                   />

               <android.widget.Button
                   android:id="@+id/edu_whiteboard"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Whiteboard"
                   android:textColor="@color/input_txt_color"
                   android:textAllCaps="false"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:background="@drawable/btn_meetings"
                   android:fontFamily="@font/sfregular"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:textAlignment="textStart"
                   android:layout_marginTop="10dp"
                   android:drawableEnd="@drawable/ic_board"
                   />

               <android.widget.Button
                   android:id="@+id/edu_quizzes_results"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Results"
                   android:textColor="@color/input_txt_color"
                   android:textAllCaps="false"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:background="@drawable/btn_meetings"
                   android:fontFamily="@font/sfregular"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:textAlignment="textStart"
                   android:layout_marginTop="10dp"
                   android:drawableEnd="@drawable/ic_results"
                   />

               <android.widget.Button
                   android:id="@+id/edu_attendace_report"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Attendance"
                   android:textColor="@color/input_txt_color"
                   android:textAllCaps="false"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:background="@drawable/btn_meetings"
                   android:fontFamily="@font/sfregular"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:textAlignment="textStart"
                   android:layout_marginTop="10dp"
                   android:drawableEnd="@drawable/ic_attendance"
                   />

               <android.widget.Switch
                   android:id="@+id/toggle_ui_mode"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:text="Dark Mode"
                   android:textColor="@color/input_txt_color"
                   android:textAllCaps="false"
                   android:elevation="2dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:background="@drawable/btn_meetings"
                   android:fontFamily="@font/sfregular"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:textAlignment="textStart"
                   android:layout_marginTop="10dp"
                   />

               <android.widget.Button
                   android:id="@+id/edu_user_delete"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Delete Account"
                   android:textColor="@color/input_txt_color"
                   android:textAllCaps="false"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:background="@drawable/btn_meetings"
                   android:fontFamily="@font/sfregular"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:textAlignment="textStart"
                   android:layout_marginTop="10dp"
                   android:drawableEnd="@drawable/ic_delete"
                   android:drawableTint="@color/input_txt_color"
                   />

               <android.widget.Button
                   android:id="@+id/edu_user_logout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Logout"
                   android:textColor="@color/input_txt_color"
                   android:textAllCaps="false"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:background="@drawable/btn_meetings"
                   android:fontFamily="@font/sfregular"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:textAlignment="textStart"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:drawableEnd="@drawable/ic_logout"
                   />

           </LinearLayout>
       </RelativeLayout>

    </ScrollView>

</RelativeLayout>