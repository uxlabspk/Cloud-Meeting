<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_user_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_profile"
            android:backgroundTint="@color/txt_color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="70dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/user_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfregular"
                android:text="Muhammad Naveed"
                android:textColor="@color/txt_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/user_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfregular"
                android:layout_marginTop="5dp"
                android:text="Hello"
                android:textColor="@color/last_message_color"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/sfregular"
            android:text="10:59 am"
            android:textColor="@color/txt_color"
            android:textSize="12sp" />

</androidx.cardview.widget.CardView>