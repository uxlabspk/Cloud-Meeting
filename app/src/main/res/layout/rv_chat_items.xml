<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_item"
        android:padding="8dp"
        android:backgroundTint="#C6C6C6"
        android:orientation="vertical"
        android:layout_marginEnd="80dp"
        android:minWidth="100dp">

        <TextView
            android:id="@+id/left_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/sfregular"
            android:textSize="18sp"
            android:text="" />

        <TextView
            android:id="@+id/left_chat_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:fontFamily="@font/sfregular"
            android:textSize="12sp"
            android:text="19:89"
            android:layout_gravity="end"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_item"
        android:padding="8dp"
        android:backgroundTint="@color/blue"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_marginStart="80dp"
        android:minWidth="100dp" >

        <TextView
            android:id="@+id/right_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/sfregular"
            android:textSize="18sp"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/right_chat_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sfregular"
                android:textSize="12sp"
                android:text="19:89" />

            <ImageView
                android:id="@+id/chat_read_status"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_message_read"
                android:backgroundTint="@color/white"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>